FROM FROM nvcr.io/nvidia/tensorflow:18.08-py3

RUN apt-get install -y --no-install-recommends \
        git
RUN git clone --depth=1 https://github.com/rajputakhil/ludwig.git \
    && cd ludwig/ \
    && pip install -r requirements.txt \
    && python -m spacy download en \
    && python setup.py install

WORKDIR /my-ml-files

ENTRYPOINT ["ludwig"]
